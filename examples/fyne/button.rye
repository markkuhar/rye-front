fyne: context { app: ?fyne-app label: ?fyne-label button: ?fyne-button container(2): ?fyne-container(2) }

; If we create Fyne constructor function inside a fyne context

rye .needs { fyne }

do\in fyne { 
	lab: label "I am a label."
	btn: button "Click" { lab .set-text "Button was clicked!" }
	box: container(2) 'vbox lab btn
	
	with app .new-window "Button Demo" {
		.set-content box ,
		.show-and-run
	}
}

